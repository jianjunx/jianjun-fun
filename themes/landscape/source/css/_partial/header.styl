#header
  position: fixed
  width 1202px
  top 10px
  left 50%
  transform translateX(-50%)
  border-radius 8px
  background-color #fff
  box-shadow: 0 0 8px #ddd
#header-outer
  height: 100%
  position: relative
  padding 0

#header-inner
  position: relative
  // overflow: hidden

#main-nav
  float: left
  // margin-left: -10px

$nav-link
  float: left
  color: color-default
  text-decoration: none
  transition: opacity 0.2s
  display: block
  padding: 20px 15px
  &.nav-active
    border-bottom 1px solid color-link
    color: color-link
  &:hover
    color: color-link
    background-color #fafafa
    


.nav-icon
  @extend $nav-link
  font-family: font-icon
  text-align: center
  font-size: font-size
  width: font-size
  height: font-size
  padding: 20px 15px
  position: relative
  cursor: pointer

.main-nav-link
  @extend $nav-link
  font-weight: 300
  letter-spacing: 1px
  @media mq-mobile
    display: none

.logo-link
  padding 12px 15px 10px
.main-nav-logo
  height 32px

#main-nav-toggle
  display: none
  &:before
    content: "\f0c9"
  @media mq-mobile
    display: block

#sub-nav
  float: right

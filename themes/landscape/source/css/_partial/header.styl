#search-form-wrap
  position relative
  height 58px
  display flex
  align-items: center
  &:before
    content: "\f002"
    font-family: FontAwesome;
    text-align: center;
    font-size: 14px;
    position absolute
    width 20px
    height 20px
    top: 22px;
    right: 6px;

.search-input
  height 30px
  width: 240px
  border 1px solid color-widget-border
  background: none
  color: color-default
  font: 13px font-sans
  border-radius: 6px
  box-sizing: border-box
  padding: 10px
  padding-right 28px
  outline: none
  &::-webkit-search-results-decoration
  &::-webkit-search-cancel-button
    -webkit-appearance: none

.search-drop
  position absolute
  display none
  top 62px
  right 0
  width: 280px
  padding 10px 0
  background-color #fff
  border-radius 8px
  box-shadow 0 0 8px #ddd
  a
    display: block
    text-decoration: none;
    padding 4px 10px
    &:hover
      background-color: color-background
  h3
    color: color-default
    font-size: 16px
  p
    color: color-sidebar-text
    font-size: 12px
.search-color
  color: color-link
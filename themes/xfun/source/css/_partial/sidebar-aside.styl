#sidebar
  @media mq-normal
    column(sidebar-column)

.widget-wrap
  margin: 12px 0
  padding 20px 0
  @extend $shadow-radius

.widget-title
  @extend $block-caption

.widget
  color: color-sidebar-text
  a
    display: flex
    justify-content: space-between
    color: color-default
    text-decoration: none
    &:hover
      text-decoration: none
  ul, ol, dl
    ul, ol, dl
      margin-left: 15px
      list-style: disc
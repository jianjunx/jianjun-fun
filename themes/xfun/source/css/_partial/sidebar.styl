if sidebar is bottom
  @import "sidebar-bottom"
else
  @import "sidebar-aside"

.widget
  @extend $base-style
  line-height: line-height
  word-wrap: break-word
  font-size: 0.9em
  ul, ol
    list-style: none
    margin: 0
    ul, ol
      margin: 0 20px
    ul
      list-style: disc
    ol
      list-style: decimal
    li
      padding 6px 15px
      &:hover
        background-color rgba(240, 240, 240, .8)


.category-list-count
.tag-list-count
.archive-list-count
  padding-left: 5px
  color: color-grey
  font-size: 0.85em
  &:before
    content: "("
  &:after
    content: ")"

.tagcloud
  a
    margin-right: 5px
    display: inline-block

.personal-avatar
  text-align: center
  img
    border-radius: 8px
    width 130px
    height 130px
  h2
    line-height: 28px
    box-sizing: border-box
    padding 0 15px
  span 
    color: color-grey
    font-size: 12px
    font-weight: normal
    box-sizing: border-box
    padding 0 15px

#nav-rss-link
  display: block
  width calc(100% - 30px)
  padding 8px 0
  margin 15px 0
  margin-left 15px
  line-height 14px
  border-bottom 1px dashed #999
  border-top 1px dashed #999
  float: none;
  &:hover
    background-color #fff
  &:before
    content: "\f09e"

.widget-count
  background-color: #ddd;
  border-radius: 10px;
  color: #fff;
  display: inline-block;
  float: right;
  font-weight: normal;
  line-height: 1.1;
  margin: 0.35em 0 0 0;
  padding: 2px 10px;
  text-align: center;
  text-shadow: 1px 1px 0 rgba(0,0,0,0.1);
  vertical-align: middle;
  white-space: nowrap;

.icons-wrap
  display: flex
  flex-wrap: wrap
  box-sizing: border-box
  padding 15px
  a
    width: 50%
    text-align: center
    line-height 26px
    font-size: 12px
    border-radius: 4px
    cursor pointer
    color: color-default
    text-decoration: none
    &:hover
      background-color: #eee

.line-gap
  display: inline-block
  width 100%
  height 0
  border-top 1px solid #eee
  margin-bottom 6px

#toc
  display none

.toc-article
  box-sizing: border-box
  // padding 0 10px
  padding-left 5px
  padding-right 15px

  li
    margin-left 10px
    line-height: 1.8
  a
   color: color-default
   text-decoration: none
   &:hover
    border-bottom 1px solid color-default

.toc-fixed
  position: fixed;
  width: 19%;
  top: 70px;

.to-top 
  display: none
  position fixed
  bottom 20px
  right 20px
  color #fff
  padding 0 10px
  padding-bottom 8px
  border-radius: 4px
  cursor pointer
  background-color: rgba(0,0,0,.3)

a.toc-active
  color: color-link
  border-bottom 1px solid color-link
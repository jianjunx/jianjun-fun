<% if (theme.valine){ %>
<script type="text/javascript" src="/js/valine.min.js"></script>
<script>
  (function (pathname, appId, appKey) {
    new Valine({
      el: "#vcomments",
      appId: appId,
      appKey: appKey,
      avatar: "robohash",
      recordIP: true,
      visitor: true,
      path: pathname,
    });
  })(
    location.pathname,
    "<%= theme.valine.appId %>",
    "<%= theme.valine.appKey %>"
  );
</script>
<% } %>
